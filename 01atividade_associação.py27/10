class Caneta:
    def __init__(self, cor):
        self.cor = cor
        self.dono = None



class Pessoa:
    def __init__(self, nome):
        self.nome = nome
        self.caneta = None

    def pegar_caneta(self,caneta):
        self.caneta = caneta 
        caneta.dono = self.nome

pessoa1 = Pessoa("Leomar")
caneta1 = Caneta("Azul")

pessoa1.pegar_caneta(caneta1)
print(pessoa1.dono)



   